<form id="togglingForm" method="post" class="form-horizontal" style="width:800px">
<!-- Form Name -->
<h4 style="text-align: left;"><b>Add New User<b></h4>

<!-- Text input-->
<div class="form-group">
<label class="col-md-2 control-label" for="User Name" style="text-align:left">User Name</label> 
<div class="col-md-3">
<input id="UserName" name="UserName" type="text" placeholder="UserName" class="form-control input-sm" required="" style="padding-left:10px">

</div>

</div>

<!-- Text input-->
<div class="form-group">
<label class="col-md-2 control-label" for="PF No" style="text-align:left">PF No</label> 
<div class="col-md-3">
<input id="PFNo" name="pfNo" type="text" placeholder="pfNo" class="form-control input-sm" required="">

</div>
</div>



<!-- select-->
<div class="form-group">
<label class="col-md-2 control-label" for="sel1" style="text-align:left">Designation</label>
<div class="col-md-3">
<select class="form-control input-sm" id="sel1" name="Designation">
     <option>select</option>
    <option>Chief Manager</option>
    <option>Senior Manager</option>
    <option>Senior Executive Officer</option>
    <option>Executive Officer</option>

  </select>
</div>
</div>

<!-- select-->
<div class="form-group">
<label class="col-md-2 control-label" for="sel1" style="text-align:left">Status</label>
<div class="col-md-3">
<select class="form-control input-sm" id="sel1" name="Status">

    <option>Active</option>
    <option>Deceased</option>
    <option>In-Active </option>

  </select>
</div>
</div>

<!-- Multiple Radios (inline) -->
<div class="form-group">
<label class="col-md-2 control-label" for="Gender" style="text-align:left">Gender</label>
<div class="col-md-3"> 
<label class="radio-inline" for="Gender-0">
<input type="radio" name="Gender" id="Gender-0" value="Male" checked="checked">
Male
</label> 
<label class="radio-inline" for="Gender-1">
<input type="radio" name="Gender" id="Gender-1" value="Female">
Female
</label>
</div>
</div>

<!-- Text input-->
<div class="form-group">
<label class="col-md-2 control-label" for="Office No" style="text-align:left">Office No</label> 
<div class="col-md-3">
<input id="OfficeNo" name="officeNo" type="text" placeholder="Office No" class="form-control input-sm" required="">

</div>
</div>
<!-- Text input-->
<div class="form-group">
<label class="col-md-2 control-label" for="Mobile No" style="text-align:left">Mobile No</label> 
<div class="col-md-3">
<input id="MobileNo" name="mobileNo" type="text" placeholder="Mobile No" class="form-control input-sm" required="">

</div>
</div>

<!-- Text input-->
<div class="form-group">
<label class="col-md-2 control-label" for="inputEmail" style="text-align:left">Email</label> 
<div class="col-md-3">
<input id="inputEmail" name="Email" type="email" placeholder="Email" class="form-control input-sm" data-error=" email address is invalid" required="">
  <div class="help-block with-errors"></div>
</div>
</div>



  
<!-- Button -->
<div class="form-group">
<div class="col-md-3">
<div style="padding-left:200px;">
<button type="submit" class="btn btn-sm btn-primary">Update</button>
</div>
</div>
</div>
</form>