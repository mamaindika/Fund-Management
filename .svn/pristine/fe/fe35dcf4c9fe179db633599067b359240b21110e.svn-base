                            <div class="col-md-2">
                                <input type="hidden" value="<%=us.getAccountNo() %>" name="searchValue" />
                                <td> <a href="deleteMasterAccountsPage.jsp?accountNo=<%=us.getAccountNo() %>" class="btn btn-primary btn-sm">Delete</a> </td>
                                </div>
